# Aliases
alias gits="git status"
alias ls="ls --color=auto -h"
alias la="ls -A"
alias ll="ls -l"
alias lal="ls -Al"
alias l="ll"
alias c="clear"
alias g="git"
alias ssx="DISPLAY=:0.0 ssh -CY"
alias amend="git add . && git commit --amend --no-edit"
alias clag="c && g lag"
alias cl="c && l"
alias clags="clag && gits"
alias clgs="clags"
alias less="less -R"
alias lef="less +F"
alias mc="java -Xms512M -Xmx6G -jar"

arhar () {
    echo "dotfiles loaded";
}

ccc () {
    gcc $1 && ./a.out;
}
